{% extends 'base.html.twig' %}

{% block title %}Business Finder - Admin area login{% endblock %}

{% block body_id 'login' %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger mx-3 my-3">
            {{ error.messageKey(error.messageData, 'security') }}
        </div>
    {% endif %}

    <div class="row mt-4 mb-3">
        <h2 class="col-md-12 text-center">Business Finder</h2>
    </div>

    <div class="row mt-4 mb-3 ml-3">
        <h4 class="col-md-12 text-center">Please login to access the system</h4>
    </div>

    <div class="row">
        <div class="offset-md-5 col-md-2 offset-md-5 text-center">
            <div class="well">
                <form action="{{ path('security_login') }}" method="post">
                    <fieldset>
                        <div class="form-group">
                            <input type="text" placeholder="Username" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <input type="password" placeholder="Password" id="password" name="_password" class="form-control" />
                        </div>
                        <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}"/>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-sign-in" aria-hidden="true"></i> Login
                        </button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}